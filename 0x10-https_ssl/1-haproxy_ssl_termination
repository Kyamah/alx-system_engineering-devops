defaults
    mode http
    timeout client 15s
    timeout connect 10s
    timeout server 15s
    timeout http-request 10s

frontend iamitsfoss-frontend
    bind *:80
    bind *:443 ssl crt /etc/haproxy/certs/kyamah.tech.pem
    default_backend iamitsfoss-backend

backend iamitsfoss-backend
    http-request redirect scheme https if  !{ ssl_fc }
    balance roundrobin
    server 130022-web-01 100.26.178.252 check
    server 130022-web-02 35.174.204.81 check
